<%-include('layouts/header', {title: 'gallery'}) %>
<% if(product_gallery){ %>
    <div class="bg-white" style="height: 100vh;">
        <div class="container  d-flex align-items-center" style="height: 100vh;">
                <div class="col-12">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                        <% for(i of product_gallery.image){ %> 
                            <div class="carousel-item car_carousel_item">
                            <img class="d-block w-100" src="/upload/<%= i.file_name %>" alt="First slide">
                            </div>
                        <% if(product_gallery.image.length > 1) { %>
                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span  aria-hidden="true" class="slider_controllers">
                                <i class="fas fa-arrow-left"></i>
                            </span>
                            <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                <span  aria-hidden="true" class="slider_controllers">
                                    <i class="fas fa-arrow-right"></i>
                                </span>
                                <span class="sr-only">Next</span>
                            </a>
                            <% } %>
                        <% } %>
                        </div>
                            <div class="col-12 d-flex justify-content-center">
                                <a href="/product/<%=product_gallery._id %>" class="btn btn-dark d-block pr-5 pl-5">
                                    <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-bar-left mr-2" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M12.5 15a.5.5 0 0 1-.5-.5v-13a.5.5 0 0 1 1 0v13a.5.5 0 0 1-.5.5zM10 8a.5.5 0 0 1-.5.5H3.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L3.707 7.5H9.5a.5.5 0 0 1 .5.5z"/>
                                      </svg>
                                    Regresar
                                </a>
                            </div>
                        </div>
                      </div>
                </div>  
        </div>
    </div>
<% } %> 
<%-include('layouts/footer') %>   



